<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contact Us</h2>
                <h3 class="section-subheading text-muted" style="color:#ffffff;">Questions? Contact us using the form below!</h3>
            </div>
        </div>
        <center>
        <div class="row">
            <div class="col-lg-12">
                <%= form_tag("/pages/thank_you") do %>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <%= label_tag :name %>
                            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
                        </div>
                        <div class="form-group">
                            <%= label_tag :email, "Email Address" %>
                            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
                        </div>
                        <div class="form-group">
                            <%= label_tag :message %>
                            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
                        </div>
                    </div>
                </div>
                <%= submit_tag "Send", :class => "btn btn-xl" %>   
                <% end %>
            </div>
        </div>
        </center>
    </div>
</section>
<!--/Contact -->