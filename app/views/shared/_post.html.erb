<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%d %b. %Y") %></td>
        <td><%= link_to 'Read More', post, :class => "site-link btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>