<section>

<p id="notice"><%= notice %></p>

<center><h1>Post Archive</h1></center>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'View Post', post, :class => "site-link" %></td>
        <% if user_signed_in? && current_user.admin? %>
        <td><%= link_to 'Edit', edit_post_path(post), :class => "site-link" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "site-link" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.admin? %>
<%= link_to 'New Post', new_post_path, :class => "btn btn-default" %>
<% end %>

</section>
